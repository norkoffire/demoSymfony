{% extends 'base.html.twig' %}

{% block title %}Ajout d'un livre
{% endblock %}

{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="example-wrapper w-50 m-auto">
	<h1>Ajout d'un livre</h1>
		{{ form_start(form) }}
		{{ form_row(form.title, {label: 'Titre'}) }}
		{{ form_row(form.isbn, {label: 'ISBN'}) }}
		{{ form_row(form.cover, {label: 'URL de la couverture'}) }}
		{{ form_row(form.editedAt, {label: 'Date d\'édition'}) }}
		{{ form_row(form.plot, {label: 'Synopsis'}) }}
		{{ form_row(form.pageNumber, {label: 'Nombre de pages'}) }}
		{{ form_row(form.status, {label: 'Statut'}) }}
		{{ form_row(form.editor, {label: 'Éditeur'}) }}
		{{ form_row(form.authors, {label: 'Auteurs'}) }}
		<button type="submit" class="btn btn-primary">Envoyer</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
