{% extends 'base.html.twig' %}

{% block title %}Ajout d'auteur
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper w-50 m-auto">
		<h1>Ajout d'auteur</h1>
		{{ form_start(form) }}
		{{ form_row(form.name, {label: 'Nom'}) }}
		{{ form_row(form.dateOfBirth, {label: 'Date de Naissance'}) }}
		{{ form_row(form.dateOfDeath, {label: 'Date de décès'}) }}
		{{ form_row(form.nationality, {label: 'Nationalité'}) }}
		{{ form_row(form.books, {label: 'Livres'}) }}
		<button type="submit" class="btn btn-primary">Envoyer</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
